<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailActivity">


    <ImageView
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:src="@drawable/poster_aquaman"
        android:id="@+id/detailPoster"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvTitle"
        android:text="Tittle"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        app:layout_constraintLeft_toRightOf="@+id/detailPoster"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Detail Descriptiion hahhahaha"
        app:layout_constraintTop_toBottomOf="@+id/detailPoster"
        android:id="@+id/tv_txt_overview"/>




</androidx.constraintlayout.widget.ConstraintLayout>